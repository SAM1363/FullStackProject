                                    <label for='student_industries3'>
                                        <h5>Third Choice </h5>
                                    </label>
                                    <select class="form-control" name='student_industries3'>
                                        <option name='student_industries3' value='<%=data.industry_id3%>'>
                                        </option>
                                    </select>
                                </div>
                            </div>
