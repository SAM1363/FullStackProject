                    </div>
                    <!--/col-3 end-->
                    <div class="col-12 col-lg-9">
                        <!-- < class="form"> -->
                        <div class='private'>
                            <div class="row form-group">
                                <div class="col-sm-6">
                                    <label for="username">
                                        <h5>Username<small>*</small></h5>
                                    </label>
                                    <input title="Enter username" type="text" class="form-control" name="username"
                                        placeholder="username" id='username' value ='<%=data.username%>'required>
                                </div>
                                <div class="col-sm-6">
                                    <label for="email">
                                        <h5>Email<small>*</small></h5>
                                    </label>
                                    <input type="email" class="form-control" name="email" value ='<%=data.email%>'
                                    pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" placeholder="you@email.com"
                                    required>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-sm-6">
                                    <label for="password">
                                        <h5>Password<small>*</small></h5>
                                        <p class='pnote'>At least 6 characters, including UPPER/lowercase and numbers</p>
                                    </label>
                                    <input type="password" class="form-control" name="password" placeholder="password"
                                        title="Password must contain at least 6 characters, including UPPER/lowercase and numbers"
                                        required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" 
                                        onchange="this.setCustomValidity(this.validity.patternMismatch ? this.title : '');
                                        if(this.checkValidity()) form.password2.pattern = RegExp.escape(this.value);">
                                </div>
                                <div class="col-sm-6">
                                    <label for="password2">
                                        <h5>Confirm Password<small>*</small></h5>
                                        <p class='pnote'>Same password as left</p>
                                    </label>
                                    <input type="password" class="form-control" title="Please enter the same password" name="password2"
                                        placeholder="confirm password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}"
                                        onchange="this.setCustomValidity(this.validity.patternMismatch ? this.title : '');">
                                </div>
                            </div>
                            <hr>
                            <h4> Private Information</h4>
                            <div class="row form-group">
                                <div class="col-sm-6">
                                    <label for="fname">
                                        <h5>First name<small>*</small></h5>
                                    </label>
                                    <input type="text" class="form-control" name="fname" value ='<%=data.fname%>'placeholder="first name" required>
                                </div>
                                <div class="col-sm-6">
                                    <label for="lname">
                                        <h5>Last name<small>*</small></h5>
                                    </label>
                                    <input type="text" class="form-control" name="lname" value ='<%=data.lname%>'placeholder="last name" required>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-sm-12">
                                    <label for="street">
                                        <h5>Address</h5>
                                    </label>
                                    <input type="text" class="form-control" name='street' value ='<%=data.street%>'placeholder="street address">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-sm-6">
                                    <label for="city">
                                        <h5>City</h5>
                                    </label>
                                    <input type="text" class="form-control" name='city' value ='<%=data.city%>'placeholder="city">
                                </div>
                                <div class="col-sm-2">
                                    <label for='state_code'>
                                        <h5>State</h5>
                                    </label>
                                    <select class="form-control" name='state_code'>
                                        <option name='state_code' value='<%=data.state_code%>'>
