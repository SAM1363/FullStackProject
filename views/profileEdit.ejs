                                    </select>
                                </div>
                                <div class="col-sm-3 teacher_code hide">
                                    <label for='teacher_code'>
                                        <h5>Teacher Code:show only at edit </h5>
                                    </label>
                                    <input class="form-control" name='teacher_code' value ='<%=data.code%>' readonly>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-sm-4">
                                    <label for='teacher_industry'>
                                        <h5> Industry </h5>
                                    </label>
                                    <select class="form-control" name='teacher_industry'>

                                    </select>
                                </div>
                            </div>
                        </div>
                        <!-- Teacher end  -->
    
                        <!-- Student info start  -->
                        <div class='student'>
                            <hr>
                            <h4> School Information</h4>
                            <div class="row form-group">
                                <div class="col-sm-9">
                                    <label for='student_school'>
                                        <h5>School Name</h5>
                                    </label>
                                    <select class="form-control" name='student_school'>
                                        <option name='student_school' value='<%=data.school_id%>'>
                                                <%=data['school.name']%>
                                        </option>
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <label id ='grade' for='grade' value='<%=data.grade%>'>
                                        <h5>Grade</h5>
                                    </label>
                                    <input class="form-control" name='grade' value ='<%=data.grade%>' readonly>
