    <body>
    
        <div class="container">
            <!-- Top row start (optional)-->
    
            <div class="row mt-3 d-flex justify-content-center mb-3">
                    <h1 class='m-1 text-center'><%=topMsg%> </h1>
                    <h1 class='m-1 text-center'><%=secondMsg%> </h1>

                <!-- <div class="col-sm-6"><a href="/users" class="float-right"><img title="profile image" class="img-circle img-fluid"
