                            <div class="col-sm-4">
                                <label for="zipcode">
                                    <h5>Zipcode</h5>
                                </label>
                                <input type="text" class="form-control" name='zipcode' value ='<%=data.zipcode%>'placeholder="zipcode">
                            </div>
                            <div class="col-sm-6">
                                <label for="telephone">
                                    <h5>Telephone</h5>
                                </label>
                                <input type="text" class="form-control" name="telephone" value ='<%=data.telephone%>'placeholder="phone number">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-12">
                                <label for="bio">
                                    <h5>Bio</h5>
                                </label>
                                <textarea type="text" class="form-control" name='bio' value ='<%=data.bio%>'placeholder="Share about yourself"><%=data.bio%></textarea>
